<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pieview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_model_four_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="柳絮"
            android:textStyle="bold"
            android:textSize="@dimen/size_18"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="产品经理"
            android:textSize="@dimen/size_12"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="武汉梦之旅途有限责任公司"
            android:textSize="@dimen/size_12"
            android:textColor="@color/white"
            />
    </LinearLayout>



    <ImageView
        android:id="@+id/ivQr"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@drawable/card_model_two_qr" />

    <com.transcendence.universe.abp.classic.pie.view.CircleMenuView
        android:id="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        app:center_text="一键播号"
        app:center_icon="@drawable/phone_white"
        app:menu_text_size="@dimen/size_13"
        app:menu_text_color="@color/white"
        app:stroke_color="@color/white"
        app:gap_color="@color/trans"
        app:stroke_width="1dp"
        app:menu_item_background="@color/trans_fourty"
        app:gap_size="1dp"
        app:inside_cirle_radius="55dp"
         />


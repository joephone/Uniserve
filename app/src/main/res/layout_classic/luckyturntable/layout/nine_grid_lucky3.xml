<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_lucky"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:gravity="center"
        android:background="@mipmap/bg_nine_grid_lottery"
        >

        <RelativeLayout
            android:layout_width="316dp"
            android:layout_marginTop="28dp"
            android:layout_height="316dp">


            <com.transcendence.universe.abp.classic.luckyturntable.view.NineGridViewThree
                android:id="@+id/lucky_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_action"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/bg_lucky_draw_btn_selector"
                android:layout_centerInParent="true"
                android:textColor="#4d1c01"
                android:textSize="34sp" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>

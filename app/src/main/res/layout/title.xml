<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/detail_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#f8f8f8" >

        <FrameLayout
            android:id="@+id/find_top_back"
            android:layout_width="50dip"
            android:layout_height="fill_parent" >

            <ImageView
                android:id="@+id/finderback"
                android:layout_width="46dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0.5dip"
                android:paddingBottom="15dip"
                android:paddingLeft="12dip"
                android:paddingRight="22dip"
                android:paddingTop="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/btn_back_black" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/register_click_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <FrameLayout
                android:id="@+id/register_title_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/register_title_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="标题"
                    android:textColor="#323232"
                    android:textSize="20sp" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>